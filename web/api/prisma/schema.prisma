generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(PARENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  TEACHER
  PARENT
  STUDENT
  COMMS
  DIRECTOR
}

model News {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String
  coverUrl  String?
  published Boolean  @default(false)
  publishedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id        String   @id @default(cuid())
  title     String
  startsAt  DateTime
  endsAt    DateTime
  location  String?
  details   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdmissionApplication {
  id          String   @id @default(cuid())
  studentName String
  level       String
  guardian    String
  email       String
  phone       String
  docUrl      String?
  createdAt   DateTime @default(now())
}
